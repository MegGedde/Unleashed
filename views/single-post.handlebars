{{!-- POST INFO --}}
<form class="m-4">
  <h2 class="form-header">{{post.title}}</h2>
  <h1>{{post.pet.pet_name}}</h1>
  <div class="m-0 columns">
    <div class="p-0 column">
      <div class="form-header">
        <h3>Species: {{post.pet.species}}</h3>
      </div>
      <div class="m-2">
        <label>Age:</label>
        <p>{{post.pet.pet_age}}</p>
        <label>Color:</label>
        <p>{{post.pet.color}}</p>
        <label>Breed:</label>
        <p>{{post.pet.breed}}</p>
      </div>
      <div>
        <h2 class="heading">Last Seen Information</h2>
        <div class="m-2">
          <label>Time:</label>
          <p>{{post.last_seen_time}}</p>
          <label>Street:</label>
          <p>{{post.last_seen_street}}</p>
          <label>City:</label>
          <p>{{post.last_seen_city}}</p>
          <label>State:</label>
          <p>{{post.last_seen_state}}</p>
          <label>Country:</label>
          <p>{{post.last_seen_country}}</p>
        </div>
      </div>
    </div>
    <div class="column is-two-thirds">
      <img src="/images/paw-print.svg" alt="image of a paw print">
    </div>
  </div>
</form>

{{#if loggedIn}}
<!-- POST A COMMENT FORM -->
<form id="comment-form">
  <div class="form-header">
    <h2>POST A COMMENT</h2>
  </div>
  <div class="m-2">
    <textarea class="m-0 textarea" placeholder="Text area..." id="comment"></textarea>
  </div>
  <button class="m-0 btn-generic" type="submit">Post</button>
</form>
{{/if}}

{{#each post.comments as |comment|}}
<div class="m-1 comment columns">
  <div class="column is-four-fifths">
    <div>
      <p>{{comment.comment}}</p>
    </div>
  </div>
  <div class="comment-header column">
    <p>By {{user.username}}</p>
    <p>On {{created_at}}</p>
  </div>
</div>
{{/each}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}